#include <cs50.h>
#include <stdio.h>

int main(void)
{
int i; 

do 
    { 
        i = get_int("%s","Height: ");
    }
while (i <= 0 || i >= 9);

for (int a = 0; a < i; a++)
    
{
for (int b = 0; b < i; b++)
    {      
    if (a+b >= i - 1)
        printf("#");
    else 
        printf(" ");
    }
    printf("\n"); 
}

}

